@model Cobit_Matrix.ViewModel.MatrizViewModel

<table class="table">
    <thead>
    <tr>
        <th></th>
        @for (int i = 0; i < Model.MetasEmpresariales.Count; i++)
        {
            <th id="header-@i" class="header-cell" data-column-index="@i">@Model.MetasEmpresariales[i].Codigo</th>
        }
    </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.MetasAlineamiento.Count; i++)
    {
        <tr>
            <td>@Model.MetasAlineamiento[i].Codigo</td>
            @for (int j = 0; j < Model.MetasEmpresariales.Count; j++)
            {
                <td class="column-@j">
                    <select>
                        <option value="S">S</option>
                        <option value="P">P</option>
                    </select>
                </td>
            }
        </tr>
    }
    </tbody>
</table>

<script src="~/js/scripts.js"></script>
<link rel="stylesheet" href="~/css/styles.css">